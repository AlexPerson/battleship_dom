<%= @printed_board %>
<div style='height:330px; width:1000px; display: inline-block; padding-top: 20px; font-size: 90%; font-family: Tahoma, Geneva, sans-serif'>
  <form action="/game_board">
    <div>
      Place Destroyer (size 3):
      <input type="text" name="coordinates_1">
      <input type="radio" id="destroyer_h" name="orientation_1" value="horizontally" checked> horizontally
      <input type="radio" id="destroyer_v" name="orientation_1" value="verticallytest" > verticallytest
      <input type="submit" value="Place Destroyer">
    </div>
  </form>
  <form action="/game_board">
    <div>
      Place Battleship (size 4):
      <input type="text" name="coordinates_2">
      <input type="radio" id="battleship_h" name="orientation_2" value="horizontally" checked> horizontally
      <input type="radio" id="battleship_v" name="orientation_2" value="vertically"> vertically
      <input type="submit" value="Place Battleship">
    </div>
  </form>
  <form action="/game_board">
    <div>
      place aircraft-carrier (size 5):
      <input type="text" name="coordinates_3">
      <input type="radio" id="aircraft-carrier_h" name="orientation_3" value="horizontally" checked> horizontally
      <input type="radio" id="aircraft_carrier_v" name="orientation_3" value="vertically"> vertically
      <input type="submit" value="Place Aircraft-Carrier">
    </div>
  </form>
  <form action="/game_board">
    <div>
      place patrol boat (size 2):
      <input type="text" name="coordinates_4">
      <input type="radio" id="patrol_boat_h" name="orientation_4" value="horizontally" checked> horizontally
      <input type="radio" id="patrol_boat_v" name="orientation_4" value="vertically"> vertically
      <input type="submit" value="Place Patrol Boat">
    </div>
  </form>
  <form action="/game_board">
    <div>
      place submarine (size 3):
      <input type="text" name="coordinates_5">
      <input type="radio" id="submarine_h" name="orientation_5" value="horizontally" checked> horizontally
      <input type="radio" id="Submarine_v" name="orientation_5" value="vertically"> vertically
      <input type="submit" value="Place Submarine">
    </div>
  </form>

  <form action="/play_game">
    <div>
      <input type="submit" value="start">
    </div>
  </form>
</div>
